<table>
<% var i; for (i = 0; i < quizes.length; i++) { %>
	<tr><td><a href="quizes/<%=quizes[i].id %>"><%= quizes[i].pregunta %></a></td></tr>
<% } %>
</table><p>
<a href="/quizes/new"><button type="button">Crear pregunta</button></a><p>

<form method="get" action="/quizes">
	<fieldset>
		<legend>Buscador de preguntas</legend>
		<input type="text" name="search" maxlength="30" size="30"
			   placeholder="Introduce la pregunta a buscar" required/>
		<input type="submit" value="Enviar" />
	</fieldset>
</form>