<fieldset>
	<legend>Listado de preguntas</legend>
	
	<table>
		<tr>
			<th>Pregunta</th>
			<th>Tema</th>
			<th colspan="2"></th>
		</tr>
	<% var tema = {otro: "Otro", humanidades: "Humanidades", ocio: "Ocio", ciencia: "Ciencia", tecnologia: "TecnologÃ­a"};
	   var i; for (i = 0; i < quizes.length; i++) { %>
		<tr>
			<td><a href="quizes/<%=quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
			<td><%= tema[quizes[i].tema] %></td>
			<% if(session.user) { %>
			<td><a href="quizes/<%=quizes[i].id %>/edit"><button>editar</button></a></td>
			<td>
				<form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
					<button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
						borrar						
					</button>
				</form>
			</td>
			<% } %>
		</tr>	
	<% } %>
	</table>	

	<% if(session.user) { %>
	<p><a href="/quizes/new"><button type="button">Crear pregunta</button></a></p>
	<% } %>
</fieldset>
	
<form method="get" action="/quizes">
	<fieldset>
		<legend>Buscador de preguntas</legend>
		<input type="text" name="search" maxlength="30" size="30"
			   placeholder="Introduce la pregunta a buscar" required/>
		<input type="submit" value="Enviar" />
	</fieldset>
</form>